@{
}

@foreach(var item in Model)
{
    <div class="swiper-slide px-1">
        <div class="p-2 position-relative">
        <a href="~/Product/CityTour/@item.Id" class="text-decoration-none text-black">
            <img data-src="@item.CityImage" alt="@item.CityName" class="w-100 h-100 rounded swiper-lazy">
            <div class="city-details position-absolute text-white d-flex flex-wrap">
                <h4 class="mb-2 ms-2 w-100 fs-5">@item.CityName</h4>
                <span class="px-2 py-1 mb-1 me-1">交通 & 旅遊必備</span>
                <span class="px-2 py-1 mb-1 me-1">熱門票卷</span>
                <span class="px-2 py-1 mb-1 me-1">更多在地體驗</span>
            </div>
        </a>
    </div>
    </div>
}