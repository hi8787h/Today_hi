            <div class="col-12 col-lg-9 text">
                <div class="card">
                    <div class="page-head">
                        <h2>帳號設定</h2>
                        <ul class="nav nav-tabs">
                            <li class="nav-item active">
                                基本資料
                            </li>
                        </ul>
                    </div>

                    <div class="page-text">
                        <form class="needs-validation" novalidate>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="name" class="form-label">姓名</label>
                                        <input type="text" class="form-control" id="name" value="@Model.MemberName" required>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="gender" class="form-label">性別</label>
                                        <select class="form-select" id="gender" required>
                                            <option selected value="">-請選擇-</option>
                                            <option value="1" selected="@(Model.Gender == true)">男性</option>
                                            <option value="0" selected="@(Model.Gender == false)">女性</option>
                                        </select>
                                        <div class="invalid-feedback mb-3">
                                            Please select a valid gender.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                @*<div class="col-md-4">
                                    <div class="form-group">
                                        <label for="identityCard" class="form-label">身分證字號</label>
                                        <input type="tel" class="form-control" id="identityCard" value="Model.IdentityCard" required>
                                        <div class="invalid-feedback">
                                            Please provide a valid ID number.
                                        </div>
                                    </div>
                                </div>*@

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="age" class="form-label">年齡</label>
                                        <input class="form-control" id="age" minlength="2" maxlength="2" value="@Model.Age" required>
                                        <div class="invalid-feedback mb-3">
                                            Please provide a valid age.
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="city" class="form-label">地區</label>
                                        <select class="form-select" id="city" required>
                                            <option selected value="">-請選擇-</option>
                                            @*<option>台灣</option>*@
                                            @foreach (var item in Model.AllCity)
                                            {
                                                <option value="@item.CityId" selected="@(item.CityId == Model.CityId)">@item.CityName</option>
                                            }
                                        </select>
                                    <div class="invalid-feedback mb-3">
                                        Please select a valid city.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="phone" class="form-label">電話號碼</label>
                                    <input type="tel" class="form-control" id="phone" minlength="10" maxlength="10" value=@Model.Phone required>
                                    <div class="invalid-feedback">
                                        Please provide a valid phone.
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="form-group">
                                    <label for="email" class="form-label">聯絡 E-mail</label>
                                    <input type="email" class="form-control" id="email" value="@Model.Email" disabled="disabled">
                                    <div class="invalid-feedback">
                                        Please provide a valid email.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="save">
                            <button class="btn btn-info text-light" id="btn-submit" type="button">儲存</button>
                        </div>
                    </form>
